<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/content_add_entry"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.coe.djshadle.snackcheckout.AddEntry"
    tools:showIn="@layout/activity_add_entry">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnMinus1"
            android:layout_weight="1"
            android:tag="1"
            android:backgroundTint="@color/minus" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:text="Hotdog - $1.00"
                android:layout_height="wrap_content"
                android:id="@+id/txtItem1"
                android:layout_width="150dp"
                android:textAlignment="center" />

            <TextView
                android:text="0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtQuantity1"
                android:textAlignment="center"
                android:tag="1" />
        </LinearLayout>

        <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnPlus1"
            android:layout_weight="1"
            android:tag="1"
            android:backgroundTint="@color/plus" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnMinus2"
            android:layout_weight="1"
            android:tag="2"
            android:backgroundTint="@color/minus" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:text="Candy - $0.75"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtItem2"
                android:textAlignment="center" />

            <TextView
                android:text="0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtQuantity2"
                android:textAlignment="center"
                android:tag="2" />
        </LinearLayout>

        <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnPlus2"
            android:layout_weight="1"
            android:tag="2"
            android:backgroundTint="@color/plus" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnMinus3"
            android:layout_weight="1"
            android:tag="3"
            android:backgroundTint="@color/minus" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:text="Pop - $1.50"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtItem3"
                android:textAlignment="center" />

            <TextView
                android:text="0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtQuantity3"
                android:textAlignment="center"
                android:tag="3" />
        </LinearLayout>

        <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnPlus3"
            android:layout_weight="1"
            android:tag="3"
            android:backgroundTint="@color/plus" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="Checkout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnCheckout"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="43dp"
            android:backgroundTint="@color/colorPrimary" />

        <Button
            android:text="Cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnCancel"
            android:layout_alignBottom="@+id/btnCheckout"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="51dp"
            android:backgroundTint="@color/minus" />
    </RelativeLayout>

</LinearLayout>
